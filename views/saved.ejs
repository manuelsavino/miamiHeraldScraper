<% include partials/header %>
<h1>Saved Articles</h1>

<div class="container">

    <div class="row">
        <% articles.forEach(function(e){ %>
        <div class="col-lg-3 col-md-4 my-3">
            <div class="card mx-auto" style="width: 17rem; height: 20rem;">
                <!-- <img class="card-img-top" src="<%= e.imgURL || `https://via.placeholder.com/150x150`%>" alt="Card image cap"> -->
                <a href="<%= e.url %>">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= e.headLine %>
                        </h5>
                        <p class="card-text">
                            <%= e.summary.slice(0, 100)%>...
                        </p>
                        <a href="#" class="btn btn-primary notes" data-id=<%=e._id %> </a>Notes
                </a>
                <a href="#" class="btn btn-danger delete" data-id=<%=e._id %> </a>X
                </a>
            </div>
            </a>
        </div>
    </div>
    <% }) %>
</div>
</div>
<% include partials/footer %>